# Production Environment Configuration for StorySign Platform

# API Configuration - will be overridden by deployment environment variables
REACT_APP_API_URL=https://storysign-backend.onrender.com
REACT_APP_WS_URL=wss://storysign-backend.onrender.com
REACT_APP_API_VERSION=v1

# Deployment Configuration
# Enable proxy for Netlify deployment
REACT_APP_USE_PROXY=true

# Environment
NODE_ENV=production

# Analytics and Monitoring
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_PERFORMANCE_MONITORING=true

# Feature Flags
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=true