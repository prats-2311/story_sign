{
  "name": "storysign-frontend",
  "version": "1.0.0",
  "description": "StorySign ASL Platform Frontend",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:production": "REACT_APP_ENVIRONMENT=production GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --coverage --watchAll=false --testResultsProcessor=jest-sonar-reporter",
    "test:a11y": "react-scripts test --testPathPattern=accessibility --watchAll=false",
    "test:a11y:watch": "react-scripts test --testPathPattern=accessibility",
    "test:a11y:coverage": "react-scripts test --testPathPattern=accessibility --coverage --watchAll=false",
    "test:a11y:ci": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "test:e2e": "jest --config=src/tests/e2e/jest.config.js --runInBand",
    "test:e2e:watch": "jest --config=src/tests/e2e/jest.config.js --watch",
    "test:e2e:coverage": "jest --config=src/tests/e2e/jest.config.js --coverage --runInBand",
    "test:e2e:performance": "node src/tests/e2e/test-runner.js",
    "test:integration": "jest --config=src/tests/integration/jest.config.js --runInBand",
    "test:state-management": "node src/tests/run-state-management-tests.js",
    "test:state-management:unit": "node src/tests/run-state-management-tests.js unit",
    "test:state-management:integration": "node src/tests/run-state-management-tests.js integration",
    "test:performance": "node src/tests/performance/run-performance-tests.js",
    "test:all": "npm run test:ci && npm run test:a11y:coverage && npm run test:e2e:coverage",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --config .eslintrc.js",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --config .eslintrc.js --fix",
    "lint:ci": "eslint src --ext .js,.jsx,.ts,.tsx --config .eslintrc.js --max-warnings 0 --format json --output-file eslint-report.json",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "validate-package": "npm ls --depth=0",
    "security-audit": "npm audit --audit-level moderate",
    "bundle-analyzer": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "lighthouse": "lhci autorun",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "analyze": "npm run build && npx serve -s build",
    "deploy:preview": "npm run build && netlify deploy",
    "deploy:production": "npm run build:production && netlify deploy --prod",
    "pre-commit": "npm run lint:ci && npm run format:check && npm run test:ci"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^6.26.2",
    "react-scripts": "5.0.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "jest-axe": "^10.0.0",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.storysign.platform",
    "productName": "StorySign Platform",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ]
  }
}
