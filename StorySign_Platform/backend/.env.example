# StorySign Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_NAME=llava-v1.5-7b-4096-preview
STORYSIGN_GROQ__ENABLED=true

# Local Vision Service Configuration
STORYSIGN_LOCAL_VISION__SERVICE_TYPE=groq
STORYSIGN_LOCAL_VISION__MODEL_NAME=llava-v1.5-7b-4096-preview

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Authentication
JWT_SECRET=your-secure-jwt-secret-key-here

# Database Configuration (if using TiDB Cloud)
DATABASE_HOST=gateway01.ap-southeast-1.prod.aws.tidbcloud.com
DATABASE_PORT=4000
DATABASE_NAME=test
DATABASE_USER=your_tidb_username
DATABASE_PASSWORD=your_tidb_password