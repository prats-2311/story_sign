# StorySign Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Groq API Configuration (for vision)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_NAME=meta-llama/llama-4-scout-17b-16e-instruct
STORYSIGN_GROQ__ENABLED=true

# Local Vision Service Configuration (using Groq)
STORYSIGN_LOCAL_VISION__SERVICE_TYPE=groq
STORYSIGN_LOCAL_VISION__MODEL_NAME=meta-llama/llama-4-scout-17b-16e-instruct

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Authentication
JWT_SECRET=your-secure-jwt-secret-key-here

# Database Configuration (TiDB Cloud)
DATABASE_HOST=your-tidb-host-here
DATABASE_PORT=4000
DATABASE_NAME=your-database-name
DATABASE_USER=your-tidb-username
DATABASE_PASSWORD=your-tidb-password

# Optional: Ollama Configuration
OLLAMA_API_KEY=your-ollama-api-key-if-needed

# Optional: Redis Configuration
REDIS_URL=redis://localhost:6379

# Optional: Monitoring
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true